<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include ./layout/title %>
    <%- include ./layout/style %>
  </head>
  <body>
    <h3><center>User Page</center></h3>
    <% if( dataperlogin.role == 'admin') { %>
    <a href="/users/add"><button type="button" name="add_user" class="btn waves-effect waves-light">add user</button></a>
    <table class="bordered">
      <thead>
      <tr>
        <th>No</th>
        <th>Nama</th>
        <th>Alamat</th>
        <th>No Telp</th>
        <th>Email</th>
        <th>Username</th>
        <th>Password</th>
        <th>Role</th>
        <th>pilihan</th>
      </tr>
      </thead>
      <% var no = 1; data_users.forEach( dt => { %>
      <tbody>
      <tr>
         <td><%= no %><% no+=1 %></td>
         <td><%= dt.nama %></td>
         <td><%= dt.alamat %></td>
         <td><%= dt.no_telp %></td>
         <td><%= dt.email %></td>
         <td><%= dt.username %></td>
         <td><%= dt.password %></td>
         <td><%= dt.role %></td>
         <td>
         <a href="/users/edit/<%= dt.id %>">edit</a> ||
         <a href="/users/delete/<%= dt.id %>">hapus</a>
         </td>
      </tr>
      </tbody>
      <% }) %>
    </table>
    <% } else { %>
      <button onclick="window.location='/dashboard'">Back</button>
      <table border="1">
        <tr>
          <th>Nama</th>
          <th>Alamat</th>
          <th>No Telp</th>
          <th>Email</th>
          <th>Username</th>
          <th>Password</th>
          <th>Role</th>
          <th>pilihan</th>
        </tr>

        <tr>
           <td><%= dataperlogin.nama %></td>
           <td><%= dataperlogin.alamat %></td>
           <td><%= dataperlogin.no_telp %></td>
           <td><%= dataperlogin.email %></td>
           <td><%= dataperlogin.username %></td>
           <td><%= dataperlogin.password %></td>
           <td><%= dataperlogin.role %></td>
           <td>
           <a href="/users/edit/<%= dataperlogin.id %>">edit</a>
           </td>
        </tr>
      </table>
    <%}%>

  </body>
</html>
