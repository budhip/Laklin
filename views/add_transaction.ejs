<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <button onclick="window.location='/transactions'">Back</button>
    <form action="/transactions/add" method="post">
      <h1>Tambah Transaksi</h1>
      <table>
        <tr>
          <td>Nama Pelanggan</td>
          <td>
            <select name="UserId">
              <% data_user.forEach( dt => { %>
                <option value="<%= dt.id %>"><%= dt.nama %></option>
              <% }) %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Paket</td>
          <td>
            <select name="PacketId">
              <% data_paket.forEach( dt => { %>
                <option value="<%= dt.id %>,<%= dt.harga_paket %>"><%= dt.nama_paket %></option>
              <% }) %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Tanggal Pesan</td>
          <td><input type="date" name="tgl_pesan"></td>
        </tr>
        <tr>
          <td>Tanggal Selesai</td>
          <td><input type="date" name="tgl_selesai"></td>
        </tr>
        <tr>
          <td>Berat</td>
          <td><input type="text" name="berat" placeholder="input berat">Kg</td>
        </tr>
        <tr>
          <td>Petugas Laundry</td>
          <td><input type="text" name="petugas_laundry" placeholder="input petugas laundry"></td>
        </tr>
        <tr>
          <td></td>
          <td><input type="submit" value="Submit"></td>
        </tr>
      </table>
    </form>
  </body>
</html>
